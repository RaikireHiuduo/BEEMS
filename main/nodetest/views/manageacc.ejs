  	<div class='container'>
    <h1>Manage Account</h1> <hr>

    <!-- Datatable -->
    <table class="table table-striped " id="account_data">
    	<thead class="thead-dark">
    		<tr>
  			  <th scope="col">#</th>
  			  <th scope="col">Username</th>
  			  <th scope="col">Password</th>
  			  <th scope="col">Edit</th>        
          <th scope="col">Delete</th>
        </tr>
    	</thead>
    	<tfoot>
    		<tr>
          <th scope="col">#</th>
          <th scope="col">Username</th>
          <th scope="col">Password</th>
          <th scope="col">Edit</th>        
          <th scope="col">Delete</th>
        </tr>
    	</tfoot> 
    	<tbody>
         <% print.forEach(function (user) { %>
    		 <tr>
          <td><%= user.ID %></td>   
          <td><%= user.username %></td>  
          <td><%= user.password %></td>
          <td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs edit_data" data-title="Edit" id="<%= user.ID %>"><span class="fa fa-pencil"></span></button></p></td>

          <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs deleteBtn" data-title="Delete" data-toggle="modal" data-target="#delete" id="<%= user.ID %>"><span class="fa fa-trash"></span></button></p></td>   
         </tr>                                
         <% }) %>
    	</tbody>
    </table>
	</div><br>

	<div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
      <div class="modal-dialog">
    	 <div class="modal-content">
          <div class="modal-header">
        	 <h4 class="modal-title custom_align" id="Heading">Edit Account Detail(s)</h4>
       		 <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="fa fa-times" aria-hidden="true"></span></button>
      	  </div>
      	  
          <div class="modal-body">
            <form id="userForm" method="POST" action="/updateAccount">
        
              <input class="form-control " type="hidden" name="accountID" id="accountID">
  	          <div class="form-group">
                <label>Username</label>
  	        	  <input class="form-control " type="text" name="username" id="username" placeholder="Username">
  	          </div>

        			<div class="form-group">
                <label>Password</label>
        			 <input class="form-control " type="password" name="password" id="password" placeholder="Password">
        			</div>

              <div class="form-group">
                <label>Confirm Password</label>
               <input class="form-control " type="password" name="password2" id="password2" placeholder="Confirm Password">
              </div>
            </div>

            <div class="modal-footer ">
              <button type="button" id="submitUpdate" class="btn btn-warning btn-lg update-data" style="width: 100%;"><span class="fa fa-check-circle" data-dismiss="modal"></span> Update</button>
            </div>
          </form>
        </div>
      </div> 
  </div>
</div>

  <div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="delete" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title custom_align" id="Heading">Delete this entry</h4>
           <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="fa fa-times" aria-hidden="true"></span></button>
        </div>

        <div class="modal-body">
          <input class="form-control " type="hidden" name="accountID" id="accountID">
          <div class="alert alert-danger"><span class="fa fa-warning-sign"></span> Are you sure you want to delete this Record?</div>
        </div>

        <div class="modal-footer ">
          <button type="button" class="btn btn-success delete_data" data-dismiss="modal"><span class="fa fa-check"></span> Yes</button>
          <button type="button" class="btn btn-default" data-dismiss="modal"><span class="fa fa-remove"></span> No</button>
        </div>
      </div>
    </div>
  </div>


  <!-- Optional JavaScript -->
	<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/jq-3.2.1/dt-1.10.16/datatables.min.css"/>
 
