	<!-- Script for datatable -->
  <script> 
  $('#account_data').dataTable(); 
  </script>

  <!-- Jquery scripting -->
  <script>
    //load data to bootstrap modal
    $(document).on('click','.edit_data',function() {
      var data = {};
      data.accountID = $(this).attr("id");

      $.ajax({
        url: '/fetchAccount',
        method:'POST',
        data: JSON.stringify(data),
        contentType: 'application/json',
        dataType: 'json',
        success: function(data){
          console.log(data);
          $('#accountID').val(data[0].ID);
          $('#username').val(data[0].username);
          $('#edit').modal('show');
        }
      });
    });

    //Submit update form of user account
    $("#edit").on("click",".update-data", function(e) {
        //e.preventDefault();

        var data = {};
        data.accountID = $("#accountID").val();
        data.username = $("#username").val();
        data.password = $("#password").val();
        console.log(data);

        $.ajax({
        url: '/updateAccount',
        method:'POST',
        data: JSON.stringify(data),
        contentType: 'application/json',
        dataType: 'json',
        success: function(data) {
          //window.location.href = data.redirect;
          console.log(data);
          console.log("Success update");
          location.reload(true);
        }
      });
    });

    //delete??
    $(document).on('click','.deleteBtn',function(e) {
      //e.preventDefault();
      $("#accountID").val($(this).attr("id"));
    });

    //delete??
    $("#delete").on('click','.delete_data',function(e) {
      //e.preventDefault();
      
      var data = {};
      data.accountID = $("#accountID").val();
      console.log(data.accountID);

      $.ajax({
        url: '/deleteAccount',
        method:'POST',
        data: JSON.stringify(data),
        contentType: 'application/json',
        dataType: 'json',
        success: function(data){
          alert("Record deleted!");
          location.reload(true);
        }
      });
    });
  </script>

