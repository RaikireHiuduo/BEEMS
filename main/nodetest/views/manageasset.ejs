  <!-- Script for datatable -->
  <script> 
  $('#asset_data').dataTable(); 
  </script>

  <!-- Jquery scripting -->
  <script>
    //load data to bootstrap modal
    $(document).on('click','.edit_data',function() {
      var data = {};
      data.assetID = $(this).attr("id");

      $.ajax({
        url: '/fetchAsset',
        method:'POST',
        data: JSON.stringify(data),
        contentType: 'application/json',
        dataType: 'json',
        success: function(data){
          console.log(data);
          $('#assetID').val(data[0].ID);
          $('#itemName').val(data[0].Name);
          $('#itemType').val(data[0].Type);
          $('#itemDesc').val(data[0].Description);
          $('#edit').modal('show');
        }
      });
    });

    //Submit update form of user account
    $("#edit").on("click",".update-data", function(e) {
        //e.preventDefault();
        var data = {};
        data.assetID = $("#assetID").val();
        data.name = $("#itemName").val();
        data.type = $("#itemType").val();
        data.description = $("#itemDesc").val();
        console.log(data);
        $.ajax({
        url: '/updateAsset',
        method:'POST',
        data: JSON.stringify(data),
        contentType: 'application/json',
        dataType: 'json',
        success: function(data) {
          console.log(data);
          console.log("Success update");
          location.reload(true);
        }
      });
    });

    
    //delete??
    $(document).on('click','.deleteBtn',function(e) {
      //e.preventDefault();
      $("#assetID").val($(this).attr("id"));
    });

    //delete??
    $("#delete").on('click','.delete_data',function(e) {
      //e.preventDefault();
      
      var data = {};
      data.assetID = $("#assetID").val();
      //console.log(data.accountID);

      $.ajax({
        url: '/deleteAsset',
        method:'POST',
        data: JSON.stringify(data),
        contentType: 'application/json',
        dataType: 'json',
        success: function(data){
          alert("Record deleted!");
          location.reload(true);
        }
      });
    });
  </script> 

